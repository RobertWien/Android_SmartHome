<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Control_Interfaces.Security">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="90dp"
            android:layout_weight="3"
            android:fontFamily="cursive"
            android:text="SECURITY WARNING:"
            android:textColor="#E91E63"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/security_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="140dp"
            android:layout_weight="3"
            android:fontFamily="cursive"
            android:text="                            "
            android:textColor="#FF9800"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pic_security_warn"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/pic_normal" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <Switch
            android:id="@+id/swDoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="190dp"
            android:thumbTint="#FFC107" />

        <ImageView
            android:id="@+id/pic_door"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/pic_door_open" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp">

        <ImageView
            android:id="@+id/pic_security_door"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginTop="275dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/pic_door_normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="300dp"
            android:layout_weight="3"
            android:fontFamily="cursive"
            android:text="DOOR WARNING:"
            android:textColor="#F44336"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/security_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="350dp"
            android:layout_weight="3"
            android:fontFamily="cursive"
            android:text="                            "
            android:textColor="#FF9800"
            android:textSize="18sp"
            android:textStyle="bold" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginTop="500dp"
        android:orientation="horizontal">


    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="SECURITY SYSTEM"
        android:textAllCaps="false"
        android:textColor="@color/purple_200"
        android:textSize="30dp"
        android:textStyle="bold" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="210dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="175dp"
            android:layout_weight="3"
            android:fontFamily="cursive"
            android:text="CHANGE DOOR PASSWORD"
            android:textColor="#03A9F4"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="240dp"
            android:layout_weight="3"
            android:fontFamily="cursive"
            android:text="FORGOT DOOR PASSWORD"
            android:textColor="#9C27B0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/change_door_pass"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="278dp"
            android:layout_marginTop="160dp"
            android:src="@drawable/ic_change_door_pass" />

        <ImageView
            android:id="@+id/forgot_door_pass"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="278dp"
            android:layout_marginTop="225dp"
            android:src="@drawable/ic_forgot_door_pass" />
    </FrameLayout>


</FrameLayout>