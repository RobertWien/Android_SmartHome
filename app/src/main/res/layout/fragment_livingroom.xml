<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFD9D9"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Control_Interfaces.Livingroom">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <Switch
            android:id="@+id/swLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="80dp"
            android:textColor="#CD1919"
            android:textColorHighlight="#E61515"
            android:textColorHint="#AE1717"
            android:textColorLink="#DF1616"
            android:textCursorDrawable="@color/purple_200"
            android:textStyle="bold"
            android:thumbTint="#F44336" />

        <ImageView
            android:id="@+id/pic_light_off"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/lampbulboff" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <Switch
            android:id="@+id/swFan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="110dp"
            android:thumbTint="#2196F3" />

        <ImageView
            android:id="@+id/pic_fan_off"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/fanair"/>

        <ImageView
            android:id="@+id/pic_fan_on"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="57dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/fan" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <Switch
            android:id="@+id/swAir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="230dp"
            android:thumbTint="#FFEB3B" />

        <ImageView
            android:id="@+id/pic_air_off"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/airconditionoff"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginTop="400dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_temp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/temperature"/>

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="40dp"
            android:layout_weight="3"
            android:fontFamily="cursive"
            android:text="... Â°C"
            android:textColor="#F44336"
            android:textSize="30sp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginTop="500dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_humid"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="64dp"
            android:src="@drawable/humid"/>

        <TextView
            android:id="@+id/humid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:fontFamily="cursive"
            android:text="... %"
            android:textColor="#2196F3"
            android:textSize="30sp"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="LIVINGROOM"
        android:textAllCaps="false"
        android:textColor="@color/purple_200"
        android:textSize="30dp"
        android:textStyle="bold" />

</FrameLayout>